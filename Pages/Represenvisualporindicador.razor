@page "/represenvisualporindicador"
@using System.Collections.Generic
@using System.Threading.Tasks
@using System.Text.Json
@using Services
@inject ServicioEntidad servicioEntidad
@inject NavigationManager navegacionManager

<PageTitle>Representaciones Visuales por Indicador</PageTitle>

<div class="container-xl">
    <div class="table-responsive">
        <div class="table-wrapper">
            <div class="table-title">
                <div class="row">
                    <div class="col-sm-6">
                        <h2>Administrar <b>Representaciones Visuales por Indicador</b></h2>
                    </div>
                    <div class="col-sm-6">
                        <button class="btn btn-danger btn-sm" @onclick="EliminarSeleccionadas">
                            <i class="material-icons">&#xE15C;</i> <span>Eliminar</span>
                        </button>

                        <button class="btn btn-success btn-sm" @onclick="AbrirModalCrear">
                            <i class="material-icons">&#xE147;</i> <span>Agregar Nueva Relación</span>
                        </button>
                    </div>
                </div>
            </div>

            @if (cargando)
            {
                <p><em>Cargando...</em></p>
            }
            else if (relaciones == null || relaciones.Count == 0)
            {
                <p>No hay relaciones disponibles.</p>
            }
            else
            {
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>
                                <span class="custom-checkbox">
                                    <input type="checkbox" @bind="@seleccionarTodas">
                                    <label></label>
                                </span>
                            </th>
                            <th>ID Indicador</th>
                            <th>Indicador</th>
                            <th>ID Representación Visual</th>
                            <th>Representación Visual</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var relacion in relaciones)
                        {
                            <tr>
                                <td>
                                    <span class="custom-checkbox">
                                        <input type="checkbox" @bind="@relacionSeleccionada[relacion]">
                                        <label></label>
                                    </span>
                                </td>
                                <td>@ObtenerValor(relacion, "fkidindicador")</td>
                                <td>@ObtenerNombreIndicador(ObtenerValor(relacion, "fkidindicador"))</td>
                                <td>@ObtenerValor(relacion, "fkidrepresenvisual")</td>
                                <td>@ObtenerNombreRepresenVisual(ObtenerValor(relacion, "fkidrepresenvisual"))</td>
                                <td>
                                    <button class="btn btn-danger btn-sm" @onclick="() => EliminarRelacion(relacion)">
                                        <i class="material-icons">&#xE872;</i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
        </div>
    </div>
</div>

@if (mostrarModalCrear)
{
    <div class="modal fade show d-block" style="background: rgba(0, 0, 0, 0.5);">
        <div class="modal-dialog">
            <div class="modal-content">
                <form @onsubmit="GuardarRelacion">
                    <div class="modal-header">
                        <h4 class="modal-title">Nueva Relación</h4>
                        <button type="button" class="close" @onclick="CerrarModalCrear">&times;</button>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <label>Indicador</label>
                            <select class="form-control" @bind="idIndicador">
                                <option value="0">Seleccione un indicador</option>
                                @foreach (var ind in indicadores)
                                {
                                    <option value="@ObtenerValor(ind, "id")">@ObtenerValor(ind, "nombre")</option>
                                }
                            </select>
                        </div>

                        <div class="form-group">
                            <label>Representación Visual</label>
                            <select class="form-control" @bind="idRepresenVisual">
                                <option value="0">Seleccione una representación visual</option>
                                @foreach (var rv in represenVisuales)
                                {
                                    <option value="@ObtenerValor(rv, "id")">@ObtenerValor(rv, "nombre")</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-success">Guardar</button>
                        <button type="button" class="btn btn-secondary" @onclick="CerrarModalCrear">Cancelar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}

@code {
    private List<Dictionary<string, object>> relaciones = new();
    private Dictionary<Dictionary<string, object>, bool> relacionSeleccionada = new();
    private List<Dictionary<string, object>> indicadores = new();
    private List<Dictionary<string, object>> represenVisuales = new();

    private bool cargando = true;
    private bool mostrarModalCrear = false;
    private int idIndicador = 0;
    private int idRepresenVisual = 0;

    private bool _seleccionarTodas = false;
    private bool seleccionarTodas
    {
        get => _seleccionarTodas;
        set
        {
            _seleccionarTodas = value;
            foreach (var clave in relacionSeleccionada.Keys.ToList())
            {
                relacionSeleccionada[clave] = _seleccionarTodas;
            }
        }
    }

    protected override async Task OnInitializedAsync()
    {
        await CargarDatos();
    }

    private async Task CargarDatos()
    {
        cargando = true;

        try
        {
            // Cargar relaciones
            var resultadoRelaciones = await servicioEntidad.ObtenerTodosAsync("proyecto", "represenvisualporindicador");
            relaciones = resultadoRelaciones ?? new();
            relacionSeleccionada = relaciones.ToDictionary(r => r, r => false);

            // Cargar indicadores
            indicadores = await servicioEntidad.ObtenerTodosAsync("proyecto", "indicador") ?? new();
            
            // Cargar representaciones visuales
            represenVisuales = await servicioEntidad.ObtenerTodosAsync("proyecto", "represenvisual") ?? new();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error al cargar datos: {ex.Message}");
            relaciones = new();
        }
        finally
        {
            cargando = false;
        }
    }

    private string ObtenerValor(Dictionary<string, object> diccionario, string clave)
    {
        return diccionario.TryGetValue(clave, out var valor) ? valor?.ToString() ?? "" : "";
    }

    private string ObtenerNombreIndicador(string idIndicador)
    {
        var indicador = indicadores.FirstOrDefault(i => ObtenerValor(i, "id") == idIndicador);
        return indicador != null ? ObtenerValor(indicador, "nombre") : "(sin nombre)";
    }

    private string ObtenerNombreRepresenVisual(string idRepresenVisual)
    {
        var rv = represenVisuales.FirstOrDefault(r => ObtenerValor(r, "id") == idRepresenVisual);
        return rv != null ? ObtenerValor(rv, "nombre") : "(sin nombre)";
    }

    private void AbrirModalCrear()
    {
        mostrarModalCrear = true;
        idIndicador = 0;
        idRepresenVisual = 0;
    }

    private void CerrarModalCrear()
    {
        mostrarModalCrear = false;
        idIndicador = 0;
        idRepresenVisual = 0;
    }
    
    private async Task GuardarRelacion()
    {
        if (idIndicador == 0 || idRepresenVisual == 0)
            return;

        try
        {
            var parametros = new Dictionary<string, object>
            {
                { "p_fkidindicador", idIndicador },
                { "p_fkidrepresenvisual", idRepresenVisual }
            };

            var respuesta = await servicioEntidad.EjecutarProcedimientoAsync(
                "proyecto",
                "insertar_represenvisual_por_indicador",
                parametros
            );

            if (respuesta != null)
            {
                await CargarDatos();
                CerrarModalCrear();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error al guardar relación: {ex.Message}");
        }
    }

    private async Task EliminarRelacion(Dictionary<string, object> relacion)
    {
        string idIndicador = ObtenerValor(relacion, "fkidindicador");
        string idRepresenVisual = ObtenerValor(relacion, "fkidrepresenvisual");

        if (string.IsNullOrEmpty(idIndicador) || string.IsNullOrEmpty(idRepresenVisual))
            return;

        try
        {
            var parametros = new Dictionary<string, object>
            {
                { "p_fkidindicador", idIndicador },
                { "p_fkidrepresenvisual", idRepresenVisual }
            };

            var respuesta = await servicioEntidad.EjecutarProcedimientoAsync(
                "proyecto",
                "E",
                parametros
            );

            if (respuesta != null)
            {
                await CargarDatos();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error al eliminar relación: {ex.Message}");
        }
    }

    private async Task EliminarSeleccionadas()
    {
        var seleccionadas = relacionSeleccionada.Where(x => x.Value).Select(x => x.Key).ToList();
        
        foreach (var relacion in seleccionadas)
        {
            await EliminarRelacion(relacion);
        }
        
        seleccionarTodas = false;
    }
}